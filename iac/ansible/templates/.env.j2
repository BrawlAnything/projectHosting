# Environment Configuration
NODE_ENV={{ app_environment }}
PORT=3000

# Database Configuration
DB_HOST={{ hostvars[groups['databases'][0]]['ansible_host'] if groups['databases'] is defined else 'localhost' }}
DB_PORT=5432
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}

# API Configuration
HEALTHCHECK_API_URL=http://localhost:5000
BRIDGE_API_URL=http://localhost:5001

# Domain Configuration
DOMAIN_NAME={{ domain_name }}
BASE_URL=https://{{ domain_name }}

# Security Configuration
JWT_SECRET={{ vault_jwt_secret | default('your-jwt-secret-change-in-production') }}
SESSION_SECRET={{ vault_session_secret | default('your-session-secret-change-in-production') }}

# Monitoring Configuration
LOG_LEVEL={{ log_level | default('info') }}
ENABLE_MONITORING={{ enable_monitoring | default(true) }}

# External Services
GOOGLE_ANALYTICS_ID={{ google_analytics_id | default('') }}
SENTRY_DSN={{ sentry_dsn | default('') }}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://{{ domain_name }},https://www.{{ domain_name }}

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR={{ app_dir }}/uploads

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

